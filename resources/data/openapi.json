  "components": {
    "securitySchemes": {
      "ElmoApiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "API key required to access the ELMO-specific endpoints. The key may be sent in the `X-API-Key` header or as the `api_key` query parameter."
      }
    },
    "schemas": {
      "ElmoResourceType": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          }
        }
      },
      "TitleType": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          }
        }
      },
      "License": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "identifier": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Language": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "GcmdScienceKeywords": {
        "type": "object",
        "description": "GCMD Science Keywords from NASA Knowledge Management System",
        "properties": {
          "lastUpdated": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the vocabulary was last updated",
            "example": "2025-10-08 11:54:31"
          },
          "data": {
            "type": "array",
            "description": "Hierarchical array of GCMD Science Keywords",
            "items": {
              "$ref": "#/components/schemas/GcmdKeywordConcept"
            }
          }
        }
      },
      "GcmdPlatforms": {
        "type": "object",
        "description": "GCMD Platforms from NASA Knowledge Management System",
        "properties": {
          "lastUpdated": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the vocabulary was last updated",
            "example": "2025-10-08 12:13:45"
          },
          "data": {
            "type": "array",
            "description": "Hierarchical array of GCMD Platforms",
            "items": {
              "$ref": "#/components/schemas/GcmdKeywordConcept"
            }
          }
        }
      },
      "GcmdInstruments": {
        "type": "object",
        "description": "GCMD Instruments from NASA Knowledge Management System",
        "properties": {
          "lastUpdated": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the vocabulary was last updated",
            "example": "2025-10-08 12:22:38"
          },
          "data": {
            "type": "array",
            "description": "Hierarchical array of GCMD Instruments",
            "items": {
              "$ref": "#/components/schemas/GcmdKeywordConcept"
            }
          }
        }
      },
      "GcmdKeywordConcept": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uri",
            "description": "Unique identifier (URI) for the concept",
            "example": "https://gcmd.earthdata.nasa.gov/kms/concept/1eb0ea0a-312c-4d74-8d42-6f1ad758f999"
          },
          "text": {
            "type": "string",
            "description": "Preferred label for the concept",
            "example": "EARTH SCIENCE"
          },
          "language": {
            "type": "string",
            "description": "Language code of the concept label",
            "example": "en"
          },
          "scheme": {
            "type": "string",
            "description": "Name of the vocabulary scheme",
            "example": "NASA/GCMD Earth Science Keywords"
          },
          "schemeURI": {
            "type": "string",
            "format": "uri",
            "description": "URI of the vocabulary scheme",
            "example": "https://gcmd.earthdata.nasa.gov/kms/concepts/concept_scheme/sciencekeywords"
          },
          "description": {
            "type": "string",
            "description": "Definition or description of the concept",
            "example": "any of various sciences, as geography, geology, or meteorology, that deal with the earth, its composition, or any of its changing aspects."
          },
          "children": {
            "type": "array",
            "description": "Child concepts in the hierarchy",
            "items": {
              "$ref": "#/components/schemas/GcmdKeywordConcept"
            }
          }
        },
        "required": ["id", "text", "language", "scheme", "schemeURI", "description", "children"]
      }
    }
  }
}
