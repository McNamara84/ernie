      "email": "ehrmann@gfz.de"
    },
    "license": {
      "name": "GPLv3",
      "url": "https://opensource.org/licenses/GPL-3.0"
    }
  },
  "servers": [
    {
      "url": "https://env.rz-vm182.gfz.de/ernie",
      "description": "Production server"
    }
