# ===========================================
# ERNIE Laravel Application - Portainer Stack
# ===========================================

# Application Settings
APP_NAME=ERNIE
APP_ENV=production
APP_KEY=base64:CHANGE_ME_USE_ARTISAN_KEY_GENERATE
APP_DEBUG=false
APP_URL=https://env.rz-vm182.gfz.de/ernie
ASSET_URL=https://env.rz-vm182.gfz.de/ernie
APP_PORT=8084

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=ernie
DB_USERNAME=ernie
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# MariaDB/MySQL Root Configuration
MARIADB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
MARIADB_DATABASE=ernie
MARIADB_USER=ernie
MARIADB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Cache, Session & Queue Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
BROADCAST_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/ernie
SESSION_DOMAIN=env.rz-vm182.gfz.de
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SESSION_HTTP_ONLY=true

# Laravel Automations (serversideup/php specific)
AUTORUN_ENABLED=true
AUTORUN_LARAVEL_MIGRATION=true
AUTORUN_LARAVEL_MIGRATION_ISOLATION=true
AUTORUN_LARAVEL_STORAGE_LINK=true
AUTORUN_LARAVEL_CONFIG_CACHE=true
AUTORUN_LARAVEL_ROUTE_CACHE=true
AUTORUN_LARAVEL_VIEW_CACHE=true
AUTORUN_LARAVEL_EVENT_CACHE=true

# PHP Performance Tuning
PHP_POOL_NAME=ernie-app
PHP_MAX_EXECUTION_TIME=120
PHP_MAX_INPUT_TIME=120
PHP_MEMORY_LIMIT=512M
PHP_POST_MAX_SIZE=64M
PHP_UPLOAD_MAX_FILE_SIZE=64M
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_INTERNED_STRINGS_BUFFER=32
PHP_OPCACHE_MAX_ACCELERATED_FILES=24000
PHP_OPCACHE_MEMORY_CONSUMPTION=256
PHP_OPCACHE_REVALIDATE_FREQ=0
PHP_OPCACHE_VALIDATE_TIMESTAMPS=0

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@gfz-potsdam.de
MAIL_FROM_NAME=${APP_NAME}

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security
SANCTUM_STATEFUL_DOMAINS=env.rz-vm182.gfz.de
SECURE_COOKIES=true

# AWS (Optional - f√ºr S3 Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME=${APP_NAME}