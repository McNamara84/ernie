# Test Environment Configuration
# This mirrors production settings but with localhost URLs for local testing

# Application
APP_NAME=ERNIE-Test
APP_ENV=production
APP_KEY=base64:test1234567890123456789012345678901234567890
APP_DEBUG=true
APP_URL=https://localhost:3333/ernie
ASSET_URL=https://localhost:3333/ernie
APP_PORT=80
APP_SSL_PORT=443

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=ernie_test
DB_USERNAME=ernie
DB_PASSWORD=ernie_test_password

# Cache & Session & Broadcasting
BROADCAST_DRIVER=log
CACHE_DRIVER=file
CACHE_PREFIX=ernie
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_PATH=/ernie
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=true
SESSION_LIFETIME=120
SESSION_SAME_SITE=lax
SESSION_HTTP_ONLY=true

# Security
SANCTUM_STATEFUL_DOMAINS=localhost:3333,localhost

# Redis (not used in test, but keep for compatibility)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="test@localhost"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_APP_BASE_PATH=/ernie
